<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow 
    http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<var name="quotationMoneyController" class="com.bbva.net.front.controller.impl.QuotationMoneyControllerImpl" />
	<var name="turnsOutwardsController" class="com.bbva.net.front.controller.impl.TurnsOutwardsControllerImpl" />
	<var name="turnsGeneralController" class="com.bbva.net.front.controller.impl.TurnsGeneralControllerImpl" />
	<var name="turnsReceivedController" class="com.bbva.net.front.controller.impl.TurnsReceivedControllerImpl" />
	<var name="personalizeProductAccountController" class="com.bbva.net.front.controller.impl.PersonalizeProductControllerImpl" />
	<var name="renderViewMovementsUI" class="com.bbva.net.front.ui.movements.RenderViewMovementsUI" />
	
	<on-start>
		<evaluate expression="turnsGeneralController.init()"/>
		<evaluate expression="turnsOutwardsController.allTurnsClientOutside()"  />
		<evaluate expression="turnsReceivedController.allTurnsClientRecived()" />
	</on-start>

	<view-state id="searchOptions">
		<on-entry>
			<set name="flowScope.menuActive" value="'DIVISAS'" />
			<evaluate expression="new java.lang.String()"/>
			<evaluate expression="renderViewMovementsUI.init()" />
		</on-entry>
		<on-render>
			<evaluate expression="renderViewMovementsUI.getRenderComponents()"
				result="viewScope.renderComponents" />
		</on-render>
	</view-state>
</flow>
