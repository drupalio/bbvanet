<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow 
    http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<var name="movementsCriteriaController" class="com.bbva.net.front.controller.impl.MovementCriteriaControllerImpl" />
	<var name="checkBookController" class="com.bbva.net.front.controller.impl.CheckBookControllerImpl" />
	<var name="accountsController" class="com.bbva.net.front.controller.impl.AccountsControllerImpl" />
	<var name="personalizeProductAccountController" class="com.bbva.net.front.controller.impl.PersonalizeProductControllerImpl"/>

	<on-start>
		<!-- <evaluate expression="checkBookController.initCheckBookList()" result="requestScope.checkBookList" /> -->
		<evaluate expression="accountsController.getCustomerAccounts()" result="flowScope.customerAccounts" />
		<!-- <evaluate expression="accountsController.getAllConditions()" result="flowScope.allConditions" /> -->
		<evaluate expression="movementsCriteriaController.getAllMovements()" result="flowScope.movements" />

	</on-start>

	<view-state id="movements">
		<on-entry>
			<set name="flowScope.menuActive" value="'ACCOUNTS'" />
			<evaluate expression="new java.lang.String()" />
		</on-entry>
		<transition to="detailMovement" on="movementSelected"></transition>
	</view-state>

	<view-state id="detailMovement" view="externalRedirect:movements">
	</view-state>

</flow>


