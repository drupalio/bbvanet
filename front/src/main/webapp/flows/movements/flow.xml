<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow 
    http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">
	
	<var name="movementsAccountController" class="com.bbva.net.front.controller.impl.MovementsAccountControllerImpl"/>
	<var name="checkBookController" class="com.bbva.net.front.controller.impl.CheckBookControllerImpl"/>
	<var name="accountsController" class="com.bbva.net.front.controller.impl.AccountsControllerImpl"/>

	<on-start>
		<evaluate expression="checkBookController.getCheckList()" result="requestScope.checkList" />
		<evaluate expression="accountsController.getCustomerAccounts()" result="flowScope.customerAccounts" />
<!-- 		<evaluate expression="accountsController.getAllConditions()" result="flowScope.allConditions" /> -->
		<evaluate expression="movementsAccountController.getProduct()" result="flowScope.pruduct" />
	</on-start>
	
	<view-state id="movements">
		<on-entry>
			<set name="flowScope.menuActive" value="'ACCOUNTS'" />
			<evaluate expression="new java.lang.String()"/>
		</on-entry>
	</view-state>
	
</flow>