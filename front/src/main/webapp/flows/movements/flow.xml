<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow 
    http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<var name="movementsCriteriaController"
		class="com.bbva.net.front.controller.impl.MovementCriteriaControllerImpl" />
	<var name="checkBookController"
		class="com.bbva.net.front.controller.impl.CheckBookControllerImpl" />
	<var name="personalizeProductAccountController"
		class="com.bbva.net.front.controller.impl.PersonalizeProductControllerImpl" />
	<var name="renderViewMovementsUI" class="com.bbva.net.front.ui.movements.RenderViewMovementsUI" />
	<var name="termsController" class="com.bbva.net.front.controller.impl.TermsControllerImpl" />
	<var name="extractController"
		class="com.bbva.net.front.controller.impl.ExtractControllerImpl" />

	<on-start>
		<evaluate expression="checkBookController.init()" />
		<evaluate expression="checkBookController.initCheckBookList()"/>
		<evaluate expression="extractController.init()" />
		<evaluate expression="personalizeProductAccountController.init()" />
		<evaluate expression="movementsCriteriaController.init()" />
		<evaluate expression="movementsCriteriaController.getSelectedProduct()"
			result="flowScope.product" />
		<evaluate expression="movementsCriteriaController.getAllMovements()" result="flowScope.movements" />
		<evaluate expression="termsController.getAllConditions()"
			result="flowScope.allConditions" />
	</on-start>

	<view-state id="movements">
		<on-entry>
			<set name="flowScope.menuActive" value="'ACCOUNTS'" />
			<evaluate expression="new java.lang.String()" />
			<evaluate expression="renderViewMovementsUI.init()" />
		</on-entry>
		<on-render>
			<evaluate expression="renderViewMovementsUI.getRenderComponents()"
				result="viewScope.renderComponents" />
			<evaluate expression="movementsCriteriaController.setShowMoreStatus()" />
		</on-render>

		<transition to="detailMovement" on="movementSelected"></transition>
	</view-state>

	<view-state id="detailMovement" view="externalRedirect:movements">
	</view-state>

</flow>
