<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow 
    http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<var name="turnsOperationController"
		class="com.bbva.net.front.controller.impl.TurnsOperationControllerImpl" />
	<var name="accountsController"
		class="com.bbva.net.front.controller.impl.AccountsControllerImpl" />
	<var name="globalPositionController"
		class="com.bbva.net.front.controller.impl.GlobalPositionControllerImpl" />

	<on-start>
		<evaluate expression="globalPositionController.init()" />
		<evaluate expression="globalPositionController.getCustomerProducts()"
			result="flowScope.customerProducts" />
	</on-start>

	<view-state id="buySellDivisas">
		<on-entry>
			<set name="flashScope.menuActive" value="'DIVISAS'" />
			<evaluate expression="new java.lang.String()" />
		</on-entry>
		<transition on="turnSelect" to="searchOptions"></transition>
	</view-state>

	<view-state id="searchOptions" view="externalRedirect:searchOptions">
	</view-state>
</flow>
