<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow 
    http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<var name="globalPositionController"
		class="com.bbva.net.front.controller.impl.GlobalPositionControllerImpl" />
	<var name="favoriteOperationsController" class="com.bbva.net.front.controller.impl.FavoriteOperationsControllerImpl"/>
	<on-start>
		<evaluate expression="globalPositionController.getCustomerProducts()"
			result="flowScope.customerProducts" />
		<evaluate expression="globalPositionController.getCustomerProductsHidden()"
			result="flowScope.customerProductsHidden" />
		<evaluate expression="applicationController.getLikes()"
			result="flowScope.likes" />
	</on-start>

	<view-state id="globalPosition">
		<on-entry>
			<set name="flowScope.menuActive" value="'PG'" />
			<evaluate expression="new java.lang.String()" />
		</on-entry>
		<transition to="detailAccount" on="accountSelected"></transition>
		<transition to="detailQuota" on="loanSelected"></transition>
	</view-state>

	<view-state id="detailQuota" view="externalRedirect:quotaDetail">
	</view-state>

	<view-state id="detailAccount" view="externalRedirect:movements">
	</view-state>

</flow>