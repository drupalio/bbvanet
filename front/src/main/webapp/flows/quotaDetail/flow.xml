<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow 
    http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">
	
	<var name="quotaController" class="com.bbva.net.front.controller.impl.QuotaControllerImpl"/>
	<var name="accountsController" class="com.bbva.net.front.controller.impl.AccountsControllerImpl"/>
	<var name="personalizeProductAccountController" class="com.bbva.net.front.controller.impl.PersonalizeProductAccountControllerImpl"/>
	
	<on-start>
		<evaluate expression="accountsController.getCustomerAccounts()" result="flowScope.customerAccounts" />	
		<evaluate expression="quotaController.getAllConditions()" result="flowScope.allConditions" />
		<evaluate expression="personalizeProductAccountController.getSelectedProduct()" result="flowScope.product"/>
	</on-start>
	
	<view-state id="quotaDetail">
		<on-entry>
			<set name="flowScope.menuActive" value="'LOANS'" />
			<evaluate expression="new java.lang.String()"/>
		</on-entry>
	</view-state>
	
</flow>